# Policy Management Service Configuration

# Podstawowe ustawienia aplikacji
PMS_APP_NAME="Policy Management Service"
PMS_APP_VERSION="1.0.0"
PMS_DEBUG=false
PMS_HOST=0.0.0.0
PMS_PORT=8120

# GitHub Webhook
PMS_GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here
PMS_GITHUB_WEBHOOK_PATH=/webhook/github

# OPAL Server
PMS_OPAL_SERVER_URL=http://opal-server:7002
PMS_OPAL_CLIENT_TOKEN=your-opal-client-token-here

# Autoryzacja API (opcjonalne)
PMS_API_KEY=your-api-key-here
PMS_JWT_SECRET=your-jwt-secret-here
PMS_JWT_ALGORITHM=HS256
PMS_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logowanie
PMS_LOG_LEVEL=INFO

# Retry logic
PMS_MAX_RETRIES=3
PMS_RETRY_DELAY=1.0
PMS_BACKOFF_FACTOR=2.0

# Przykład dla docker-compose
# Wszystkie wartości można też ustawić bezpośrednio w docker-compose.yml 